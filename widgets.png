public void drawButton(Minecraft mc, int mouseX, int mouseY) {
    if (this.visible) {
        mc.getTextureManager().bindTexture(new ResourceLocation("astralassets:textures/gui/widgets.png"));
        FontRenderer fontRenderer = mc.fontRenderer;

        // Determine the hover state (0 = normal, 1 = hover, 2 = pressed)
        boolean isHovered = mouseX >= this.x && mouseY >= this.y && mouseX < this.x + this.width && mouseY < this.y + this.height;
        int state = 0;
        if (isHovered) {
            if (Mouse.isButtonDown(0)) {
                state = 2; // Pressed state
            } else {
                state = 1; // Hovered state
            }
        }

        // Calculate vertical texture Y offset based on state (each slice = 20px tall)
        int textureY = state * 20;

        // Draw the button section
        drawTexturedModalRect(this.x, this.y, 0, textureY, this.width, this.height);

        // Optional: text glow or dim based on state
        int textColor = state == 2 ? 0xAAAAAA : 0xE0E0E0;
        drawCenteredString(fontRenderer, this.displayString, this.x + this.width / 2, this.y + (this.height - 8) / 2, textColor);
    }
}
